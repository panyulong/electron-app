{
	"name": "electron-app",
	"author": "panyulong",
	"version": "1.0.0",
	"main": "electron/main.ts",
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"serve": "vite preview",
		"electron": "wait-on tcp:3000 && cross-env NODE_ENV=development electron .",
		"electron:pack": "electron-builder --dir",
		"electron:dev": "kill-port 3000 && concurrently -k \"yarn dev\" \"yarn electron\"",
		"electron:builder": "yarn build && electron-builder",
		"build:for:electron": "cross-env ELECTRON=true vite build",
		"app:pack": "yarn build:for:electron && yarn electron:pack",
		"app:build": "yarn build:for:electron && yarn electron:builder",
		"electron:build:win": "electron-builder --windows"
	},
	"dependencies": {
		"element-plus": "^1.3.0-beta.5",
		"kill-port": "^1.6.1",
		"vue": "^3.2.16",
		"vue-router": "^4.0.14"
	},
	"devDependencies": {
		"@vitejs/plugin-vue": "^1.9.3",
		"concurrently": "^6.3.0",
		"cross-env": "^7.0.3",
		"electron": "^13.1.7",
		"electron-builder": "^22.11.7",
		"electron-devtools-installer": "^3.1.0",
		"less": "^4.1.2",
		"vite": "^2.6.4",
		"wait-on": "^6.0.0"
	},
	"build": {
		"appId": "com.my-website.my-app",
		"productName": "myApp",
		"copyright": "Copyright Â© 2022 ${author}",
		"directories": {
			"buildResources": "assets",
			"output": "dist"
		},
		"files": [
			"dist/**/*",
			"electron/**/*"
		],
		"win": {
			"icon": "public/cccs.icns",
			"target": [
				"nsis"
			]
		},
		"mac": {
			"category": "public.app-category.utilities",
			"icon": "public/cccs.icns"
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true
		}
	}
}
